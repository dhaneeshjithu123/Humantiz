<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Humantiz.View.RequestTabbedPage"
            xmlns:pages="clr-namespace:Humantiz.View" BarBackgroundColor="{DynamicResource ToolBarBackground}">
  <!--Pages can be added as references or inline-->
    <NavigationPage Title="Leave Request" Icon="request" BarBackgroundColor="{StaticResource ToolBarBackground}">
        <x:Arguments>
            <pages:LeaveRequestFirstTabbedPage/>
        </x:Arguments>
    </NavigationPage>
    <NavigationPage Title="Leave View" Icon="request" BarBackgroundColor="{StaticResource ToolBarBackground}">
        <x:Arguments>
            <pages:LeaveRequestViewTabbedPage></pages:LeaveRequestViewTabbedPage>
        </x:Arguments>
    </NavigationPage>

</TabbedPage>